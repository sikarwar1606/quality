<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Factory Management Portal</title>
    <style>
      /* Custom scrollbar for tables */
      .runningProduction::-webkit-scrollbar {
        height: 8px;
        width: 8px;
      }
      .runningProduction::-webkit-scrollbar-thumb {
        background-color: #a0aec0;
        border-radius: 4px;
      }
    </style>
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <%- include("partials/qualityNav") %>

    <!-- Hero / Welcome Section -->

    <!-- Quick Stats Cards -->
    <section
      class="my-8 mx-3 md:mx-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6"
    >
     

      <div class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition">
        <h3 class="text-gray-500 font-semibold">Latest Batch</h3>
        <p class="text-3xl font-bold text-purple-600 mt-2">
          <%= latestBatchNo ? latestBatchNo.batch_number : '-' %>
        </p>
      </div>

      <div
        class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition"
        id="visualInspection"
      >
        <h3 class="text-gray-500 font-semibold">Visual Inspection</h3>
        <p class="text-3xl font-bold text-green-600 mt-2">
          <a href="/visual/CCM-01">
            <video width="50"  preload="none" style="background: transparent  url('https://cdn-icons-png.flaticon.com/512/19013/19013031.png') 50% 50% / fit no-repeat;" autoplay="autoplay" loop="true" muted="muted" playsinline="">
        <source src="https://cdn-icons-mp4.flaticon.com/512/19013/19013031.mp4" type="video/mp4">
    </video>
           
          </a>
        </p>
      </div>
      <div
        class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition"
        id="dimension"
      >
        <h3 class="text-gray-500 font-semibold">Dimension</h3>
        <p class="text-3xl font-bold text-green-600 mt-2">
          <a href="/dimension/CCM-01">
           <video width="50"  preload="none" style="background: transparent  url('https://cdn-icons-png.flaticon.com/512/19026/19026322.png') 50% 50% / fit no-repeat;" autoplay="autoplay" loop="true" muted="muted" playsinline="">
        <source src="https://cdn-icons-mp4.flaticon.com/512/19026/19026322.mp4" type="video/mp4">
    </video>

          </a>
        </p>
      </div>

     <div
  class="bg-white rounded-xl shadow p-6 hover:shadow-lg transition relative group"
  id="prepareCoa"
>
  <h3 class="text-gray-500 font-semibold">Prepare COA</h3>
  <p class="text-3xl font-bold text-green-600 mt-2 flex ">
    <video
      width="50"
      preload="none"
      style="background: transparent url('https://cdn-icons-png.flaticon.com/512/6172/6172540.png') 50% 50% / fit no-repeat;"
      autoplay
      loop
      muted
      playsinline
    >
      <source src="https://cdn-icons-mp4.flaticon.com/512/6172/6172540.mp4" type="video/mp4">
    </video>
  </p>

  <!-- Hidden buttons, shown on hover -->
  <div
    class="absolute inset-0 flex flex-col items-center justify-center gap-3 bg-white/90 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity"
  >
    <a
      href="/coa/coa"
      class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition"
    >
      For Customer
    </a>
    <a
      href="/coa/coaInt"
      class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
    >
      For Internal Transfer
    </a>
  </div>
</div>

    </section>

    <!-- Latest Batches Table -->
    <section
      class="my-8 mx-4 md:mx-12 bg-white rounded-xl shadow overflow-hidden"
    >
      <h2 class="text-2xl font-bold text-gray-700 p-3 border-b border-gray-200">
        Running Machine
      </h2>
      <div class="runningProduction overflow-x-auto">
        <table class="min-w-full text-center">
          <thead
            class="bg-gradient-to-r from-indigo-500 to-purple-500 text-white"
          >
            <tr>
              <th class="py-3 px-6">M/C</th>
              <th class="py-3 px-6">Batch No.</th>
              <th class="py-3 px-6">Design</th>
              <th class="py-3 px-6">Logo</th>
              <th class="py-3 px-6">Colour</th>
              <th class="py-3 px-6">From</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% machineList.forEach(mc => { const row = dataMap[mc]; %>
            <tr class="hover:bg-indigo-50 transition">
              <td class="py-2 px-4 font-medium"><%= mc %></td>
              <td class="py-2 px-4"><%= row ? row.batch_number : '' %></td>
              <td class="py-2 px-4"><%= row ? row.design : '' %></td>
              <td class="py-2 px-4"><%= row ? row.debossed : '' %></td>
              <td class="py-2 px-4"><%= row ? row.colour : '' %></td>
              <td class="py-2 px-4">
                <%= row?.date ? new Date(row.date).toLocaleDateString("en-GB") :
                '' %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>
    <script>
      let prepareCoa = document.getElementById("prepareCoa");
      prepareCoa.addEventListener("click", () => {
        window.location.href = "/coa/coa";
      });
      let visualInspection = document.getElementById("visualInspection");
      visualInspection.addEventListener("click", () => {
        window.location.href = "/visual/CCM-01";
      });
      let dimension = document.getElementById("dimension");
      dimension.addEventListener("click", () => {
        window.location.href = "/dimension/CCM-01";
      });
    </script>
  </body>
</html>
