<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <title>Document Details</title>
    <link rel="stylesheet" href="/stylesheets/add_batch.css">
  </head>
  <body>
    <%- include("../partials/qualityNav") %>

    <div class="details">
      <div class="main">
        <h1>Corporate</h1>
        <h3>Enter Document Details</h3>

        <form action="/addnewdocDetails/new" method="post">
          <label for="docNo"> Document No.: </label>
          <input type="text" id="docNo" name="docNo" placeholder="SIPL-QA-R-01" required />  
          
          <label for="docName"> Document Name: </label>
          <input type="text" id="docName" name="docName" placeholder="CSD" required />  

          <label for="revNo"> Revision No.: </label>
          <input type="text" id="revNo" name="revNo" required />  

          <label for="revDt"> Revision Date: </label>
          <input type="text" id="revDt" name="revDt" required />  


          <div class="wrap">
            <button type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>

    <script>
      // Force uppercase for all inputs with class="uppercase"
      document.querySelectorAll("input.uppercase").forEach(input => {
        input.addEventListener("input", function () {
          this.value = this.value.toUpperCase();
        });
      });
    </script>
  </body>
</html>