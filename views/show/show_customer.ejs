<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <title>Find & Update Customer</title>
    <link rel="stylesheet" href="/stylesheets/add_batch.css">
  </head>
  <body>
    <%- include("../partials/qualityNav") %>

    <div class="details">
      <div class="main">
        <h1>Corporate</h1>
        <h3>Customer Details</h3>

        <form action="/customer/update" method="post">

          <label for="gst_number"> GST Number: </label>
          <input type="text" id="gst_number" name="gst_number" value="<%=gst_number%>" required />

          <label for="customer_location"> Customer Location: </label>
          <input type="text" id="customer_location" name="customer_location" value="<%=customer_location%>" required />

          <label for="customer_name">Customer Name: </label>
          <input type="text" id="customer_name" name="customer_name" value="<%=customer_name%>" required />

          <label for="customer_template"> Template Code: </label>
          <input type="text" id="customer_template" name="customer_template" value="<%=customer_template%>" required />

        
          <label for="issued_by">Issued By: </label>
          <input type="text" id="issued_by" name="issued_by" class="uppercase" value="<%=issued_by?issued_by : ''%>" required />

          <div class="wrap">
            <button type="submit">Submit</button>
          </div>
        </form>
      </div>
    </div>

    <script>
      // Force uppercase for all inputs with class="uppercase"
      document.querySelectorAll("input.uppercase").forEach(input => {
        input.addEventListener("input", function () {
          this.value = this.value.toUpperCase();
        });
      });
    </script>
  </body>
</html>
