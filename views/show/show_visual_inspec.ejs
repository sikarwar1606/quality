              <td colspan="3">Colour</td>
              <td colspan="5">
                <input
                  type="text"
                  value="<%=mb_detail? mb_detail.mb_colour : ''%>"
                />
              </td>
              <td colspan="3">DB/EM/PL</td>
              <td colspan="5">
                <%=latestBatches? latestBatches.debossed : ''%>
