<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Floating Sidebar</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 50px; /* leave space for navbar if you have one */
      right: 10px;
      width: 140px;
      max-height: 80vh;
      padding: 5px;
      border-radius: 5px;
      overflow-y: auto;
      z-index: 9999; /* stays on top of all content */
    }

    .machine {
      display: block;
      width: 100%;
      margin: 3px 0;
      padding: 5px;
      background: #83e986;
      color: black;
      font-weight: 400;
      text-align: center;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      font-size: 10px;
    }

    .machine:hover {
      background: #1bd124;
    }

    /* Example main content */
    .content {
      padding: 20px;
    }
  </style>
</head>
<body>

  <!-- Sidebar (Floating, doesn't disturb content) -->
  <div class="sidebar">
    <button class="machine" id="mc1">CCM-01</button>
    <button class="machine" id="mc2">CCM-02</button>
    <button class="machine" id="mc3">CCM-03</button>
    <button class="machine" id="mc4">CCM-04</button>
    <button class="machine" id="mc5">CCM-05</button>
    <button class="machine" id="mc6">CCM-06</button>
    <button class="machine" id="mc7">CCM-07</button>
    <button class="machine" id="mc8">CCM-08</button>
    <button class="machine" id="mc9">CCM-09</button>
    <button class="machine" id="mc10">CCM-10</button>
    <button class="machine" id="mc11">CCM-11</button>
    <button class="machine" id="mc12">CCM-12</button>
    <button class="machine" id="mc14">CCM-14</button>
    <button class="machine" id="mc15">CCM-15</button>
    <button class="machine" id="mc16">CCM-16</button>
    <button class="machine" id="mc17">CCM-17</button>
    <button class="machine" id="home" ><a href="/">Home</a></button>
  </div>

  
<script>
  // Select all machine buttons
  document.querySelectorAll(".machine").forEach(button => {
    button.addEventListener("click", function () {
      const machineId = this.textContent.trim(); // e.g. "mc1", "mc2"
      window.location.href = `/visual/${machineId}`;
    });
  });
</script>

</body>
</html>
